{
  "manifest_version": 3,
  "name": "Patreon Downloader",
  "version": "1.3",
  "description": "Detect, analyze, and convert .m3u8 files to MP4.",
  "permissions": [
    "webRequest",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
